<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/yellowButter</item>
        <item name="colorPrimaryDark">@color/yellowMustard</item>
        <item name="colorAccent">@color/blueBuyML</item>
        <item name="android:windowBackground">@drawable/gradient_yellow</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/gray70</item>
        <item name="android:textColorSecondary">@color/gray60</item>
    </style>

</resources>